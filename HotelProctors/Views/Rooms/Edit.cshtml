@model HotelProctors.Models.RoomViewModel

@{
    ViewBag.Title = "Edit Room";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



@using (Html.BeginForm("Edit", "Rooms", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



    <div class="row">

        <div class="col-md-4 mx-auto">



            <div class="myform form ">
                <form action="" method="post" name="login">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Room.Id)

                    <div class="form-group">

                        @Html.LabelFor(model => model.Room.Price, htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Room.Price, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                            @Html.ValidationMessageFor(model => model.Room.Price, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Room.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Room.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.Bed, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Room.Bed, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Room.Bed, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.Size, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Room.Size, new { htmlAttributes = new { @class = "form-control", @min = 0 } })
                            @Html.ValidationMessageFor(model => model.Room.Size, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.View, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Room.View, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Room.View, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.RoomType, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Room.RoomType, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Room.RoomType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.MaxPersons, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Room.MaxPersons, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Room.MaxPersons, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.Floor, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EnumDropDownListFor(model => model.Room.Floor, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Room.Floor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Room.Amenities, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(i => i.Room.AmenitiesId,
                                   new SelectList(ViewBag.Amenities, "Id", "AmenitiesPackage", Model.Room.AmenitiesId), "-- Select --", new { @class = "form-control" })
                                </div>
                            </div>








                    <div class="form-group">
                        @Html.LabelFor(model => model.Room.ProfilePicture, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.HiddenFor(model => model.Room.ProfilePicture)
                                @Html.ValidationMessageFor(model => model.Room.ProfilePicture, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="file-field">
                        <div class="btn btn-primary btn-sm float-left">
                            <span>Choose file</span>
                            <input type="file" name="postedFile" />
                        </div>

                    </div>
                </form>


            <div class="text-center ">
                <div class="col-md-6 mx-auto">
                    <button type="submit" value="save" class="btn btn-block btn-outline-dark tx-tfm" style="margin: 5px">Save</button>
                </div>


                <div class="text-center">
                    <div class="col-md-6 mx-auto">
                        @Html.ActionLink("Back", "Rooms", "Admin", null, new { @class = "btn btn-block btn-outline-dark tx-tfm", style = "margin: 5px" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}




