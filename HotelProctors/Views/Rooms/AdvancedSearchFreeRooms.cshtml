@model IEnumerable<HotelProctors.Models.Room>

@{
    ViewBag.Title = "Rooms";
    //Layout = null;
    Layout = "~/Views/Shared/_Layout1.cshtml";
}




<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                            <div class="room">
                                <a href=@Url.Action("SingleRoom", "RoomController") class="img d-flex justify-content-center align-items-center" style="background-image:url(@item.ProfilePicture);">
                                    <div class="icon d-flex justify-content-center align-items-center">
                                        <span class="icon-search2"></span>
                                    </div>
                                </a>
                                <div class="text p-3 text-center">
                                    <h3 class="mb-3">@Html.ActionLink(Html.DisplayFor(modelItem => item.RoomType).ToHtmlString(), "SingleRoom", new { id = item.Id })</h3>
                                    <p><span class="price mr-2">@Html.DisplayFor(modelItem => item.Price)</span> <span class="per">per night</span></p>
                                    <ul class="list">
                                        <li><span>@Html.DisplayNameFor(model => model.Size):</span> @Html.DisplayFor(modelItem => item.Size)</li>
                                        <li><span>@Html.DisplayNameFor(model => model.View):</span>@Html.DisplayFor(modelItem => item.View)</li>
                                        <li><span> @Html.DisplayNameFor(model => model.Bed):</span> @Html.DisplayFor(modelItem => item.Bed)</li>
                                        <li>

                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                                            @Html.ActionLink("Create", "Create")
                                        </li>
                                    </ul>
                                    <hr>
                                    <p class="pt-1"><a href="room-single.html" class="btn-custom">Book Now <span class="icon-long-arrow-right"></span></a></p>@*Booking pou prpei na ftiaxtei*@
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
      
        </div>
    </div>

</section>







