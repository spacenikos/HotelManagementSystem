@model HotelProctors.Models.SearchViewModel

@using (Html.BeginForm("GetFreeRooms", "Rooms", FormMethod.Post, new { @class = "booking-form" }))
{

    <section class="ftco-booking">
        <div class="container">
            <div class="row" style=" color :wheat">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-lg-12">
                    <form class="booking-form">
                        <div class="row">
                            <div class="col-md-3 d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">

                                        @Html.LabelFor(model => model.ArrivalDate, htmlAttributes: new { @class = "control-label col-md-2 Start_Date" })
                                        @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control" ,@id="Start_Date"} })

                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">
                                        @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "control-label col-md-2 " })
                                        @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control",@id="End_Date" } })

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3 d-flex">
                                <div class="form-group p-4 align-self-stretch d-flex align-items-end">
                                    <div class="wrap">
                                        @Html.LabelFor(model => model.Room.RoomType, htmlAttributes: new { @class = "control-label col-md-2 " })
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                                @Html.EnumDropDownListFor(model => model.Room.RoomType, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Room.RoomType, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md d-flex">
                                <div class="form-group d-flex align-self-stretch ">

                                    <input type="submit" value="Check Availability" class="btn btn-primary py-3 px-3 align-self-stretch " id="Button">

                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

}
<script>
    function Run() {
        const Start_Date = document.getElementById('Start_Date')
        const End_Date = document.getElementById('End_Date')
        const btn = document.getElementById('Button')
        console.log(Start_Date)
              console.log(End_Date)
        function check_date() {


            if (Start_Date.value >= End_Date.value) {
                alert("End Date must be after Start Date");
                End_Date.value = 0;
            }
        }
        btn.addEventListener('click', check_date)
    }
    window.addEventListener('load', Run);
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
