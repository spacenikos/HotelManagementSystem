@model HotelProctors.Models.SearchViewModel

@using (Html.BeginForm("AdvancedGetFreeRooms", "Rooms", FormMethod.Post))
{
    <div class="fields">
        <div class="form-group">
            @Html.EditorFor(model => model.ArrivalDate, new { htmlAttributes = new { @class = "form-control",@id="Start_Date" } })
            @Html.ValidationMessageFor(model => model.ArrivalDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control",@id="End_Date" } })
            @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <div class="select-wrap one-third">
                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                @Html.EnumDropDownListFor(model => model.Room.RoomType, "Room Type", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Room.RoomType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="select-wrap one-third">
                <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                @Html.EnumDropDownListFor(model => model.Room.MaxPersons, "Max Persons", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Room.MaxPersons, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" id="Button" value="Search" class="btn btn-primary py-3 px-5">
        </div>
    </div>

}
<script>
    function Run() {
        const Start_Date = document.getElementById('Start_Date')
        const End_Date = document.getElementById('End_Date')
        const btn = document.getElementById('Button')
        console.log(Start_Date)
              console.log(End_Date)
        function check_date() {


            if (Start_Date.value >= End_Date.value) {
                alert("End Date must be after Start Date");
                End_Date.value = 0;
            }
        }
        btn.addEventListener('click', check_date)
    }
    window.addEventListener('load', Run);
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}
